<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_guesser">

    <fragment
        android:id="@+id/nav_guesser"
        android:name="com.timmerl.mementoguesser.presentation.view.mementoguesser.MementoGuesserFragment"
        android:label="@string/guesser_label">

        <action
            android:id="@+id/navigate_to_addMemento"
            app:destination="@id/nav_addMemento" />
    </fragment>
    <fragment
        android:id="@+id/nav_addMemento"
        android:name="com.timmerl.mementoguesser.presentation.view.addmemento.AddMementoFragment"
        android:label="@string/add_memento_label">

        <action
            android:id="@+id/navigate_from_add_to_guesser"
            app:destination="@id/nav_guesser" />
    </fragment>
    <fragment
        android:id="@+id/management"
        android:name="com.timmerl.mementoguesser.presentation.view.mementomanagement.MementoManagementFragment"
        android:label="@string/management_label">

        <action
            android:id="@+id/navigate_from_management_to_guesser"
            app:destination="@id/nav_guesser" />
    </fragment>
</navigation>